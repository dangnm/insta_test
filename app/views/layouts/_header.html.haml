%header.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      = link_to "My photos", root_path, id: "logo", class: 'navbar-brand'
      %button.navbar-toggle{"data-toggle" => "collapse", "data-target" => "#navbar"}
        %span.sr-only="Toggle navigation"
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #navbar.navbar-collapse.collapse.in{"aria-expanded" => "true"}
      %ul.nav.navbar-nav
        %li= link_to "Home", root_path
        %li= link_to "Upload", upload_index_path
        %li= link_to "Search", search_index_path
        - if signed_in?
          %li#fat-menu.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", profile_index_path
              %li.divider
              %li
                = link_to "Sign out", destroy_user_session_path, :method => :delete
        - else
          %li= link_to "Sign in", new_user_session_path